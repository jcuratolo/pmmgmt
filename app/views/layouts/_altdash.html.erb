<% if current_user %>

 
<div class="adminhead">

<a href="/"><img class="downimgt" src="/assets/pmlogo1.png" alt="logo"></a>

</div>

<h2 class="myadmintxt text-center">Admin Dashboard</h2>

<div class="text-center">
<div class="btn-group dashbtn">
  <button type="button" id="unitbtn" class="btn btn-default btn-primary">Units</button>
  <button type="button" id="buildbtn" class="btn btn-default btn-primary">Buildings</button>
</div>
</div>
<div class="container">
<div class="dashhead pull-right">
  <%= render 'units/modaltest' %>
</div> 
</div>



<div class="altdashView">
<div class="container">
	<div class="row titleRow">

		<div class="col-xs-3">
			Building Name
		</div>
		<div class="col-xs-4">
			Address
		</div>
		<div class="col-xs-2">

		</div>
		<div class="col-xs-1">
			Units
		</div>
		<div class="col-xs-2">
			Phone
		</div>
	</div>
	<% @buildings.each do |b| %>
	<div class="row contentRow">

		<div class="col-xs-3">
			<%= b.bName %>
		</div>
		<div class="col-xs-4">
			<%= b.bAddress1 %>
		</div>
		<div class="col-xs-2">
	
		</div>
		<div class="col-xs-1">
			<%= b.bUnitCount %>
		</div>
		<div class="col-xs-2">
			<%#= link_to  %>
			<%= b.bPhone %>
		</div>
	</div>
<% end %>
</div>
</div>

<div class="altdashViewU">
<div class="container">
	<div class="row titleRow">

		<div class="col-xs-2">
			Building Name
		</div>
		<div class="col-xs-1">
			Unit
		</div>
		<div class="col-xs-1">
			Type
		</div>
		<div class="col-xs-1">
			Bed
		</div>
		<div class="col-xs-1">
			Bath
		</div>
		<div class="col-xs-1">
			Sq Ft
		</div>
		<div class="col-xs-1">
			Rent
		</div>
		<div class="col-xs-1">
			Vacant
		</div>
		<div class="col-xs-1">
			View
		</div>
		<div class="col-xs-1">
			Edit
		</div>
			<div class="col-xs-1">
			Delete
		</div>
	</div>
	<% @buildings.each do |b| %>
	<% b.units.each do |u| %>
	<!-- <a href="#" class="mylistingimg"><%#= image_tag u.unitimage.url(:thumb) %></a>
      <a href="#" class="mylistingimg"><%#= image_tag u.unitimage2.url(:thumb) %></a>
      <a href="#" class="mylistingimg"><%#= image_tag u.unitimage3.url(:thumb) %></a>
      <a href="#" class="mylistingimg"><%#= image_tag u.unitimage4.url(:thumb) %></a> -->
	<div class="row contentRow">

		<div class="col-xs-2">
			<%= b.bName %>
		</div>
		<div class="col-xs-1">
			<%= u.uNumber %>
		</div>
		<div class="col-xs-1">
			<%= u.uType %>
		</div>
		<div class="col-xs-1">
			<%= u.uBedroomCount %>
		</div>
		<div class="col-xs-1">
			<%= u.uBathroomCount %>
		</div>
		<div class="col-xs-1">
			<%= u.uSquareFootage %>
		</div>
		<div class="col-xs-1">
			$<%= u.uPrice %>
		</div>
		<div class="col-xs-1">
			<% if u.uListing= "true" %>
			<%= 'Yes' %>
			<% else %>
			<%= 'No' %>
			<% end %>
		</div>
		<div class="col-xs-1">
			<a class="details" href="#">
				<%= link_to "View", unit_path(u), method: :get, :class => "viewdeets" %>
			</a>
		</div>
		<div class="col-xs-1">
				<%= button_to "edit", edit_unit_path(u.id), method: :get, :class => "deletebutn" %>
		</div>
		<div class="col-xs-1">
				<%= button_to "delete", unit_path(u.id), method: :delete, :class => "deletebutn" %>
		</div>
	</div>
<% end %>
<% end %>

<br />


</div>

<% end %>

