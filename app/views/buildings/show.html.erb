  <br /><br />
  <div class="container unitshow">
    <%= render 'layouts/listingslider' %>
    <div class="row units"><br /><br />
      <div class="col-xs-1">
      </div>
      <div class="col-xs-10 text-center">
        <span class="bold"><%= @building.bName %></span><br />
        <span class="bold"> <%= @building.full_street_address %></span><br />
        <span class="mytitle">Listed: </span>
        <span class="bold"><%= @building.created_at.strftime("%b%e%l:%M %p") %></span><br />
        <span class="mytitle">Updated: </span> 
        <span class="bold"><%= @building.updated_at.strftime("%b%e%l:%M %p") %></span> <br />
      <br />
  <%if @units.count == 0 %> 
