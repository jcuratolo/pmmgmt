  <%elsif @units.count == 1 %>
  1 unit availabe:
  <%elsif @units.count > 1 %>
  <%=@units.count %> units available:
  <% end %>
  <hr>
  <% @units.each do |unit| %>
  <%= link_to unit.uType, unit %><br />
  <%= unit.uBedroomCount %> Bedrooms
  <%= unit.uDescription %> 
  <%= number_to_currency unit.uPrice %>
  <hr>
  <% end %>


