<p>LISTINGS/index.html.erb</p>
<div class="container">

  <%= form_for @listing_report, url: {action: "edit"}, html: {class: "nifty_form"} do |f| %>
  <%= f.text_field :title %>
  <%= f.text_area :body, size: "60x12" %>
  <%= f.submit "Create" %>
<% end %>
<% @listings.each do |l| %>
        
<%= l.bAddress1 %> #<%= l.uNumber %> <br/>
<%= l.bCity %><br/>
<%= l.bState %> <%= l.bZip %>

<li>Type: <%= l.uType %></li>
<li># of Bedrooms = <%= l.uBedroomCount %> </li>
<li># of Bathrooms = <%= l.uBathroomCount %> </li>
<li>Square Footage = <%= l.uSquareFootage %> </li>
<li> Description = <%= l.uDescription %> </li>

<li>Images = <%= image_tag l.unitimage.url(:medium) %> </li>

<hr>
<% end %>
</div>


